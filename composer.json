{
    "name": "death_satan/sms-sdk",
    "description": "This is a Sms library",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "DeathSatan\\SmsSdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DeathSatan\\SmsSdkTest\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Death-Satan",
            "email": "2771717608@qq.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.0",
        "phpstan/phpstan": "^1.8",
        "mockery/mockery": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    }
}
